<Layout::Section::Header @title={{t "developers.api-keys.index.title"}} @searchQuery={{this.query}} @onSearch={{perform this.search}}>
    <div class="flex items-center mr-3">
        <Toggle @isToggled={{this.isTestMode}} @onToggle={{this.toggleTestMode}} @label={{t "developers.api-keys.index.label"}} @helpText={{t "developers.api-keys.index.help-text"}} class="mr-1" />
        {{#if this.isTestMode}}
            <span class="ml-2">
                <select class="form-select form-input-sm" aria-label="Select API Key" {{on "change" this.toggleTestKey}}>
                    <option selected disabled>
                        {{t "developers.api-keys.index.select-key"}}
                    </option>
                    <option value="null" selected={{eq this.testKey null}}>
                        {{t "developers.api-keys.index.test-data"}}
                    </option>
                    {{#each (filter-by 'isTestKey' @model) as |key|}}
                        <option value={{key.id}} selected={{eq this.testKey key.id}}>
                            {{or key.name key.key}}
                        </option>
                    {{/each}}
                </select>
            </span>
        {{/if}}
    </div>
    {{#if (safe-has this.table "selectedRows")}}
        <DropdownButton @icon="layer-group" @text={{t "developers.common.bulk-action"}} @type="magic" @size="sm" @buttonWrapperClass="mr-2" @contentClass="dropdown-menu" as |dd|>
            <div class="next-dd-menu mt-2 mx-0">
                <div class="px-1">
                    <a href="#" class="text-red-500 next-dd-item" {{on "click" (dropdown-fn dd this.bulkDeleteApiCredentials)}}>
                        {{t "developers.api-keys.index.delete-api"}}
                    </a>
                </div>
            </div>
        </DropdownButton>
    {{/if}}
    <Button @type="primary" @icon="plus" @iconPrefix="fas" @text={{t "developers.common.new"}} class="mr-2" @onClick={{this.createApiKey}} />
    <Button @icon="long-arrow-up" @iconClass="rotate-icon-45" @text={{t "developers.common.export"}} @onClick={{this.exportApiKeys}} />
</Layout::Section::Header>

<Layout::Section::Body>
    <Table @rows={{@model}} @columns={{this.columns}} @selectable={{true}} @canSelectAll={{true}} @onSetup={{fn (mut this.table)}} @pagination={{true}} @paginationMeta={{@model.meta}} @page={{this.page}} @onPageChange={{fn (mut this.page)}} @tfootVerticalOffset="53" @tfootVerticalOffsetElements=".next-view-section-subheader" />
</Layout::Section::Body>